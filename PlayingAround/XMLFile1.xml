<Root>
  <Subjects>
    <add name="environment"/>
    <add name="applicationType"/>
    <add name="service"/>
  </Subjects>
  <Parameter name="LoggingFolderPath">
    <Values>
      <add value=".\logs">
        <References>
          <subject name="environment" value="development"/>
          <subject name="applicationType" value="client"/>
          <subject name="service" value="all"/>
        </References>
      </add>
      <add value="c:\logs\">
        <References>
          <subject name="environment" value="development"/>
          <subject name="applicationType" value="applicationServer"/>
          <subject name="service" value="all"/>
        </References>
      </add>
      <add value="c:\UserData\ApplicationName\logs\">
        <References>
          <subject name="environment" value="production"/>
          <subject name="applicationType" value="client"/>
          <subject name="service" value="all"/>
        </References>
      </add>
      <add value="\\someNetworkDrive\enterpriseAuditData\">
        <References>
          <subject name="environment" value="production"/>
          <subject name="applicationType" value="applicationServer"/>
          <subject name="service" value="AuditService"/>
        </References>
      </add>
    </Values>
  </Parameter>
</Root>
